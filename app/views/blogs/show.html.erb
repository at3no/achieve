<div class="container">
<div class="wrapper  col-md-8 col-md-offset-4 col-sm-10">
<p><%= notice %></p>
<h1>ブログ詳細</h1>
<div class="row">
  <p><%= image_tag(@blog.user.image_url) %></p>
  <h4><strong>タイトル：<%= @blog.title %></strong></h4>
  <p>本文：<%= @blog.content %></p>
  <p>ユーザID：<%= @blog.user_id %>&nbsp;ユーザ名：<%= @blog.user.name %></p>
  <%= link_to "ブログを編集する", edit_blog_path(@blog.id), class: 'btn btn-default btn-sm btn-success' %>
  <%= link_to "ブログを削除する", blog_path(@blog), method: :delete, data: {confirm: '本当に削除していいですか？'}, class: 'btn-default btn-sm btn btn-danger' %>
</div>
</div>
</div>

<div id="page-top-btn" class="page-top-btn">
    <p><a class="move-page-top" id="move-page-top">▲</a></p>
</div>
