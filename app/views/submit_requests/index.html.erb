<div class="container">
<div class="wrapper  col-md-8 col-md-offset-4 col-sm-10">
<p id="notice"><%= notice %></p>

<h1>Listing Submit Requests</h1>

<table style="width: 100%; border: 1px solid #e4e4e4;">
  <thead>
    <tr>
      <th style="padding: 10px; border: 1px solid #e4e4e4; background: #f5f5f5;">User</th>
      <th style="padding: 10px; border: 1px solid #e4e4e4; background: #f5f5f5;">Task</th>
      <th style="padding: 10px; border: 1px solid #e4e4e4; background: #f5f5f5;">Message</th>
      <th style="padding: 10px; border: 1px solid #e4e4e4; background: #f5f5f5;">Request user</th>
      <th style="padding: 10px; border: 1px solid #e4e4e4; background: #f5f5f5;">Status</th>
      <th colspan="3" style="padding: 10px; border: 1px solid #e4e4e4; background: #f5f5f5;"></th>
    </tr>
  </thead>

  <tbody>
    <% @submit_requests.each do |submit_request| %>
      <tr>
        <td style="padding: 10px; border: 1px solid #e4e4e4;"><%= submit_request.user.name %></td>
        <td style="padding: 10px; border: 1px solid #e4e4e4;"><%= submit_request.task.title %></td>
        <td style="padding: 10px; border: 1px solid #e4e4e4;"><%= submit_request.message %></td>
        <td style="padding: 10px; border: 1px solid #e4e4e4;"><%= submit_request.request_user_id %></td>
        <td style="padding: 10px; border: 1px solid #e4e4e4;"><%= submit_request.status %></td>
        <td style="padding: 10px; border: 1px solid #e4e4e4;"><%= link_to 'Show', submit_request %></td>
        <td style="padding: 10px; border: 1px solid #e4e4e4;"><%= link_to 'Edit', edit_submit_request_path(submit_request) %></td>
        <td style="padding: 10px; border: 1px solid #e4e4e4;"><%= link_to 'Destroy', submit_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Submit request', new_submit_request_path %>
</div>
</div>
